<UserControl x:Class="FoxTunes.PlaybackState"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
            xmlns:ViewModel="clr-namespace:FoxTunes.ViewModel"
             mc:Ignorable="d">
    <UserControl.Resources>
        <ViewModel:PlaybackState x:Key="ViewModel" PlaylistItem="{Binding}"></ViewModel:PlaybackState>
    </UserControl.Resources>
    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding Caption, Mode=OneWay, Source={StaticResource ViewModel}}" FontFamily="Webdings" FontSize="16" Foreground="{DynamicResource TextBrush}"></TextBlock>
</UserControl>
